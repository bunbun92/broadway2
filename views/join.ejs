    <link rel="stylesheet" href="../src/static/css/login.css" />
    <style></style>

    <title>broadway9th</title>
  </head>
  <body>
    <%-include('headerLogin.ejs') %>

    <div class="text-align form-margin-top">
      <div>
        <h1>회원가입</h1>
      </div>
      <div class="join-box">
        <div class="form-floating form-margin">
          <label for="userId">Id</label>
          <input
            type="userId"
            class="form-control"
            id="userId"
            placeholder="아이디는 영어 대소문자와 숫자를 사용한 3글자 이상만 가능합니다."
          />
        </div>
        <div class="form-floating form-margin">
          <label for="password">password</label>
          <input
            type="password"
            class="form-control"
            id="password"
            placeholder="비밀번호는 영어 대소문자와 숫자를 사용한 3글자 이상만 가능합니다."
          />
        </div>
        <!-- <div class="form-floating form-margin">
      <label for="passwordCheck">password check</label>
      <input
        type="password"
        class="form-control"
        id="passwordCheck"
        placeholder="입력한 비밀번호와 동일하게 입력해주세요."
      />
    </div> -->
        <div class="form-floating form-margin">
          <label for="name">name</label>
          <input
            type="name"
            class="form-control"
            id="name"
            placeholder="닉네임은 한글,영어 대소문자,숫자만 사용가능합니다."
          />
        </div>
        <div class="form-floating form-margin">
          <label for="email">email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="aaa@aaa.aaa 이메일 양식을 지켜주세요."
          />
        </div>
        <div class="form-floating form-margin">
          <label for="userType">userType</label>
          <input
            type="userType"
            class="form-control"
            id="userType"
            placeholder="aaa@aaa.aaa 이메일 양식을 지켜주세요."
          />
        <button
          class="btn btn-lg btn-info margin-bottom"
          type="button"
          onclick="location.href='/login'"
        >
          뒤로
        </button>
        <button
          class="btn btn-lg btn-info margin-bottom"
          type="button"
          onclick="join()"
        >
          회원가입
        </button>
      </div>
    </div>
    <script>
      function join() {
        let userId = $('#userId').val();
        let password = $('#password').val();
        // let passwordCheck = $('#passwordCheck').val();
        let name = $('#name').val();
        let email = $('#email').val();
        let userType = Number($('#userType').val());
        console.log(userId);
        console.log(typeof(password));
        console.log(typeof(name));
        console.log(typeof(email));
        console.log(typeof(userType));
        // if (password !== passwordCheck) {
        //   return customAlert('패스워드를 다시 체크해주세요');
        // }

        $.ajax({
          type: 'POST',
          url: '/user/signup',
          data: {
            userId,
            password,
            name,
            email,
            userType
          },
          success: function (response) {
            customAlert(response.message);
            window.location.replace('/login');
          },
          error: function (response) {
            console.log('응, 아니야.', response);
            console.log('응, 아니야.');
            customAlert(response.responseJSON.errorMessage);
          },
        });
      }

      function customAlert(text) {
        $('#alertText').text(text);
        $('#alertModal').modal('show');
      }
    </script>
  </body>
</html>
