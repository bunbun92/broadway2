  <body>
    <%- include('header.ejs') %>

    <div class="comments">
      <div class="row1">
        <table class="table" id="article-table">
          <thead>
            <tr>
              <th class="commentsId"><a>댓글아이디</a></th>
              <th class="comments"><a>댓글</a></th>
              <th class="user-name"><a>작성자</a></th>
              <th class="created-at"><a>작성일</a></th>
              <th class="updateComment"><a>수정하기</a></th>
            </tr>
          </thead>
          <tbody id="commentId"></tbody>
        </table>
      </div>
      <div class="rowBox">
        <div class="row2">
          <div class="d-grid">
            <form id="user-form">
              <fieldset>
                <legend>댓글작성</legend>
                <div class="postComments">
                  <input type="text" id="postComments" placeholder="글작성" />
                </div>
                <button type="button" id="submit_Button" onclick="checkInput()">
                  등록
                </button>
              </fieldset>
            </form>
          </div>
        </div>
        <div class="row3">
          <div class="d-grid"></div>
          <form id="user-form">
            <fieldset>
              <legend>댓글수정</legend>
              <div>
                <input type="text" id="putComments" placeholder="수정하기" />
                <input type="hidden" id="slectedCommentId" />
                <input type="hidden" id="slecteduserId" />
                <input type="hidden" id="slectedreviewId" />
              </div>
              <button type="button" id="aaa" onclick="">등록</button>
            </fieldset>
          </form>
        </div>
      </div>
    </div>

    <script src="scripts/comment.js"></script>
  </body>

